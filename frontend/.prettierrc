{
  "semi": true,
  "trailingComma": "all",
  "singleQuote": true,
  "printWidth": 80,
  "tabWidth": 2,
  "endOfLine": "auto",
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "singleQuote": false
      }
    },
    {
    "files": "*.html",
      "options": {
        "printWidth": 80,
        "semi": false,
        "trailingComma": "none"
      }
    }
  ]
}

